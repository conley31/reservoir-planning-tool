<form id="calculator-input" method="POST" action="/">
  <div id="reservoir-inputs" class="form-group">
    <label class="input-group">Pond Volume</label>
    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="pondVolSmallest" placeholder="Smallest" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">acre-foot</span>
    </div>

    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="pondVolLargest" placeholder="Largest" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">acre-foot</span>
    </div>

    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="pondVolIncrement" placeholder="Increment" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">acre-foot</span>
    </div>

    <br>

    <label class="input-group">Pond Volume (in acre-feet)</label>
    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="pondDepth" placeholder="Pond Depth" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">feet</span>
    </div>

    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="pondWaterDepthInitial" placeholder="Pond's Initial Depth" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">feet</span>
    </div>
  </div>

  <div id="irrigation-inputs" class="form-group">
    <label class="input-group">Irrigation Inputs</label>
    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="maxSoilMoistureDepth" placeholder="Max Soil Moisture Content" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">tbd</span>
    </div>

    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="irrigatedArea" placeholder="Irrigation Area" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">tbd</span>
    </div>

    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="irrigDepth" placeholder="Irrigation Depth" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">inches</span>
    </div>
    <div class="input-group">
      <input type="number" step="any" min = "0" class="form-control" name="availableWaterCapacity" placeholder="Available Water Capacity" aria-describedby="basic-addon2">
      <span class="input-group-addon" id="basic-addon2">inches</span>
    </div>
  </div>     
  <div id="location-inputs" class="form-group">
    <div class="input-group">
      <label>Location</label>
      <input id="places-input" class="form-control" type="text" placeholder="Input place or address">
    </div>
  </div>

  <div id="submit">
    <button id='form-submit'type="submit" class="btn btn-block">Submit</button>
 </div>

</form>
