<!DOCTYPE html>
<html>
<% include partials/head %>

  <body>
    <% include partials/header %>
      <div class="container">
        <div class="row" id="map-row">
          <div id="sidebar" class="col-md-3">
              <!-- This is where the search will go and selected ID will be shown -->
              <h3>SIDEBAR</h3>
              <p id="mapselection"></p>
              <div id="submit">
                <button id="map-submit" class="btn btn-block">
                  Confirm Selection
                </button>
             </div>
          </div>
          <div class="col-md-9">
            <div class="row">
              <div id="map" class="col-md-12">
                <!-- This is where Google Maps will go -->
                <h3>Map</h3>
              </div>
            </div>
          </div>
        </div>

        <div id="graph-body" class="hide">
          <div class="row">
            <div id="sidebar" class="col-md-3">
                <!-- This is where calculator input goes -->
                <% include calculator-input %>
            </div>
            <div class="col-md-9">
              <div class="row">
                <div id="graph" class="col-md-12">
                    <!-- This is where Google Charts will go -->
                    <h3>Graph</h3>
                </div>
                <div id="graph-desc" class="col-md-12">
                  <div class="container">
                    <!-- This is where the Graph's description will be printed -->
                    <h3>Graph Description</h3>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% include partials/footer %>
      <% include partials/scripts %>
  </body>

</html>
